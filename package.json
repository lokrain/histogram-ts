{
    "name": "@lokrain/histogram",
    "version": "0.1.0",
    "description": "Headless histogram engine + React view with GPU renderers",
    "type": "module",
    "main": "./dist/histogram.cjs",
    "module": "./dist/histogram.es.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/histogram.es.js",
            "require": "./dist/histogram.cjs"
        }
    },
    "files": [
        "dist"
    ],
    "sideEffects": false,
    "scripts": {
        "dev": "vite",
        "build": "vite build && tsc -p tsconfig.build.json",
        "preview": "vite preview"
    },
    "peerDependencies": {
        "react": "^18 || ^19",
        "react-dom": "^18 || ^19"
    },
    "devDependencies": {
        "@types/node": "^24.5.2",
        "@types/react": "19.1.13",
        "@types/react-dom": "19.1.9",
        "@vitejs/plugin-react": "5.0.3",
        "typescript": "^5.5.0",
        "vite": "7.1.6"
    },
    "engines": {
        "node": ">=18"
    },
    "license": "MIT"
}
